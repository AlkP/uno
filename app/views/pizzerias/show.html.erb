<h3><%= @pizzeria.name %></h3><br>

<%= form_for @pizzeria, :url => pizzeria_path(@pizzeria) do |f| %>

  <table class="table table-striped">
    <tr>
      <td>
        <%= f.label :Наименование %><br>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :'Признак работы' %><br>
      </td>
      <td>
        <%= f.check_box :work %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :email %><br>
      </td>
      <td>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address %><br>
      </td>
      <td>
        <%= f.text_field :address %>
      </td>
    </tr>
    <tr>
      <td>
        <label for="azimut_Описание">Обновить полигон пиццерии</label><br>
      </td>
      <td>
        <textarea id="azimut_description" name="azimut[arr]"></textarea>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to 'Назад', sauces_path %> |
        <%= f.submit 'Сохранить', class: "cat cat-active pan-pizza"%>
      </td>
    </tr>
  </table>
<% end %>

<br><br><br><br>
<% @coordinates.each do |f| %>
  <tr>
    <td>
      <%= f.latitude %>
    </td>
    <td>
      <%= f.longitude %>
    </td>
  <tr> <br>
<% end %>

