<h3>Редактирование <%= @classification.name %></h3><br>
<div class="modal-body">
  <%= form_for @classification, :url => classification_path(@classification) do |f| %>

    <table class="table table-striped">
      <tr>
        <td>
          <%= f.label :'Вес классификатора' %><br>
        </td>
        <td>
          <%= f.text_field :weight %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :Наименование %><br>
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Назад', classifications_path %> |
          <%= f.submit 'Сохранить', class: "cat cat-active pan-pizza"%>
        </td>
      </tr>
    </table>
  <% end %>
</div>
<div class="modal-footer">

</div>