  <%= form_for @pizza, :url => pizza_path(@pizza) do |f| %>

    <table class="table table-striped">
      <tr hidden>
        <td>
          <%= f.label :'Пицца для набора ?' %><br>
        </td>
        <td>
          <% if @sets %>
            <%= f.check_box :sets, checked: true %>
          <% else %>
            <%= f.check_box :sets %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :Наименование %><br>
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :'Классификация' %><br>
        </td>
        <td>
          <%= f.select(:classification_id, @classification.map {|f| [f.name, f.id]}, selected: @pizza.classification_id ) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :Описание %><br>
        </td>
        <td>
          <%= f.text_area :description %>
        </td>
      </tr>
      <!--<tr>-->
        <!--<td>-->
          <!--< %= f.label :'Описание в окне ?' %><br>-->
        <!--</td>-->
        <!--<td>-->
          <!--< %= f.check_box :modal_help %>-->
        <!--</td>-->
      <!--</tr>-->
      <tr>
        <td>
          <%= f.label :Файл %><br>
        </td>
        <td>
          <%= f.file_field :view_products %>
        </td>
      </tr>
      <tr>
        <td><br></td><td></td>
      </tr>
      <tr>
        <td>
          <button><%= link_to 'Назад', '/pizza' %></button>

        </td>
        <td>
          <%= f.submit 'Сохранить', class: "cat cat-active pan-pizza"%>
        </td>
      </tr>


    </table>
  <% end %>
